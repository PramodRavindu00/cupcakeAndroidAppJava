<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

            <ImageView
                android:id="@+id/loginregisterimage"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:src="@drawable/loginregister"
                android:scaleType="fitXY"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/backToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbuttonwhite"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:layout_marginTop="350dp">
        </TextView>

        <EditText
            android:id="@+id/txt_L_UserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginregisterimage"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Enter User ID"
            android:inputType="textPersonName"
            android:textColorLink="@color/design_default_color_primary_dark" />

        <EditText
            android:id="@+id/txt_L_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_L_UserId"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColorLink="@color/purple_700" />

        <Button
            android:layout_below="@+id/txt_L_Password"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_L_Login"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/white"
            android:background="@drawable/submit_button"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
            android:layout_below="@+id/btn_L_Login"
            android:id="@+id/login_to_register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account ?"
            android:textStyle="italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        <Button
            android:layout_below="@+id/btn_L_Login"
            android:layout_toRightOf="@+id/login_to_register_text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_call_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Register Now"
            android:textStyle="italic"/>

        <Button
            android:layout_below="@+id/login_to_register_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_forgot_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Forgot Password ?"
         />
</RelativeLayout>