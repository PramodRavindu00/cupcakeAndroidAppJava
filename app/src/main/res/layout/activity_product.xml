<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CategoryProductActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bground">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/back_pAndC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backbuttonwhite"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Add New Category"
            android:padding="10dp"

            android:textAlignment="center"/>
        <EditText
            android:id="@+id/txt_C_CategoryID"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Category ID"

            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/txt_C_CategoryName"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="Enter Category Name"
            android:textStyle="bold"
            android:background="@drawable/edit_text"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_NewCategory"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Submit New Category"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:background="@drawable/submit_button"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Add New Product"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/txt_P_ProductId"
            android:layout_marginTop="15dp"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Product ID" />

        <EditText
            android:id="@+id/txt_P_ProductName"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:textStyle="bold"
            android:padding="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Product Name"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Select the category :"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <Spinner
            android:id="@+id/sp_P_Category"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/txt_P_Price"
            android:layout_width="370dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Price"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_NewProduct"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Submit New Product"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/submit_button"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>