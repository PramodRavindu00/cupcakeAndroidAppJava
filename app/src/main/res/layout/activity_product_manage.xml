<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductManageActivity"
    android:background="@drawable/bg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/back_mngProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backbutton"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/orderHeader"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Products"
            android:textAlignment="center"
            android:textAppearance="@color/black"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/txt_Search_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Product Name / Product ID"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_Search_Product"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Search Product"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/submit_button"
            ></Button>
        <TextView
            android:id="@+id/ProductSearchResult"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:text=""
            android:padding="5dp"
            android:layout_gravity="center"
            android:textAppearance="@color/black"
            tools:ignore="MissingConstraints" />
        <TextView
            android:textSize="22dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Change product details :"
            android:textAppearance="@color/black"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/txt_Change_Product_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Change Product Name"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/txt_Change_Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Change Price"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Change current Category :"
            android:textAppearance="@color/black"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/sp_Product_Manage"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_Edit_Product"
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Edit Product details"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/submit_button">
        </Button>

        <Button
            android:id="@+id/btn_Delete_Product"
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Delete Product"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/delbtn"
            android:layout_gravity="center"></Button>
    </LinearLayout>
</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>